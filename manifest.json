{
    "manifest_version": 3,
    "name": "Robinhood to Yahoo Finance",
    "description": "Easily jump from a stock's page on robinhood.com to the same ticker on Yahoo! Finance.",
    "version": "1.0.3",
    "content_scripts": [
        {
            "matches": ["https://robinhood.com/*"],
            "js": [
                "jquery-3.5.1.min.js",
                "dist/contentScript.js",
                "dist/Robinhood.js"
            ]
        }
    ],
    "background": {
        "service_worker": "dist/serviceWorker.js"
    },
    "action": {
        "default_icon": "yahoo-icon.png"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false
    },
    "permissions": ["tabs", "scripting"],
    "host_permissions": ["https://robinhood.com/*"]
}
